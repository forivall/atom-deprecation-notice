{
  "name": "atom-deprecation-notice",
  "version": "1.0.0",
  "description": "Deprecation Notice for Atom editor packages",
  "keywords": [
    "atom",
    "atom-editor",
    "depd",
    "deprecate",
    "deprecation",
    "notification"
  ],
  "homepage": "https://github.com/forivall/atom-deprecation-notice#readme",
  "bugs": "https://github.com/forivall/atom-deprecation-notice/issues",
  "repository": {
    "type": "github",
    "url": "forivall/atom-deprecation-notice"
  },
  "license": "ISC",
  "author": "Emily Marigold Klassen <forivall@gmail.com>",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "global": "atom",
    "space": 2,
    "semi": false,
    "rules": {
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "semi-style": [
        "error",
        "first"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "@typescript-eslint/no-unnecessary-condition": "warn",
      "@typescript-eslint/semi": [
        "error",
        "never",
        {
          "beforeStatementContinuationChars": "always"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": "off"
    }
  },
  "devDependencies": {
    "@atom/mocha-test-runner": "^1.6.0",
    "@types/atom": "^1.40.12",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.55",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chai": "^4.3.6",
    "eslint-config-xo-typescript": "^0.19.0",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "xo": "^0.25.3"
  },
  "engines": {
    "atom": "*"
  }
}
